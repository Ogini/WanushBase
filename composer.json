    }
  ],
  "prefer-stable": true,
  "require": {
    "filp/whoops": "^2.3",
    "patricklouys/http": "^1.4",
    "nikic/fast-route": "^1.3",
    "rdlowrey/auryn": "^1.4",
    "twig/twig": "^2.7",
    "symfony/var-dumper": "^4.2",
    "swiftmailer/swiftmailer": "^6.2",
    "twitter/bootstrap": "^4.3",
    "components/jquery": "~3.5.1",
    "ext-pdo": "*"
  },
  "require-dev": {},
  "autoload": {
    "psr-4": {
