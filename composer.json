    "post-update-cmd": [
      "mkdir -p public/css",
      "mkdir -p public/js",
      "cp vendor/twitter/bootstrap/dist/css/bootstrap.min.css public/css",
      "cp vendor/twitter/bootstrap/dist/js/bootstrap.bundle.min.js public/js",
      "cp vendor/components/jquery/jquery.min.js public/js"
    ]
